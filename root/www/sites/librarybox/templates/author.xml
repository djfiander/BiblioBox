<?xml version="1.0" encoding="UTF-8"?>
<%!
    import queries
%>
<%
    author_info = queries.author_info(conn, author_id)
%>
<feed xmlns="http://www.w3.org/2005/Atom"
      xmlns:dc="http://purl.org/dc/terms/"
      xmlns:opds="http://opds-spec.org/2010/catalog">
  <id>urn:uuid:${author_info['uuid']}</id>
 
  <link rel="self"    
        href="/cat/author/${author_id}"
        type="application/atom+xml;profile=opds-catalog;kind=acquisition" />
  <link rel="start"
	href="/cat"
	type="application/atom+xml;profile=opds-catalogue;kind=navigation" />
  <link rel="up"
	href="/cat/author"
	type="application/atom+xml;profile=opds-catalogue;kind=navigation" />

  <title>Works by ${author_info['name']|h}</title>
  <updated>2012-05-24T12:48:00Z</updated>
  <author>
    <name>David Fiander</name>
  </author>
  <%include file="titlelist.xml" args="tlist=queries.author_works(conn, author_id)" />
</feed>
